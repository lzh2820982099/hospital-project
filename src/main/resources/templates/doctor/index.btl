<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>就医</title>
    <link rel="stylesheet" href="${ctxPath}/css/layui.min.css">
    <link rel="stylesheet" href="${ctxPath}/css/normalize.css" type="text/css"/>
    <link rel="stylesheet" href="${ctxPath}/css/secondary.css" type="text/css"/>
    <script language="javascript" type="text/javascript" src="${ctxPath}/js/KunyiHTML5.min.js"></script>
    <script language="javascript" type="text/javascript" src="${ctxPath}/js/Kunyilibrary.js"></script>
    <style>
        /*分页样式*/
        .layui-laypage .layui-laypage-curr .layui-laypage-em {
            background-color: #1E9FFF;
        }
    </style>
</head>
<body>

<div class="layui-layout layui-layout-admin">
    <!-- 引入公共头部开始 -->
    <% include("common/header.btl"){} %>
    <!-- 引入公共头部结束 -->

    <!-- 内容主体区域 -->
    <div style="width: 1200px;margin: 0 auto;clear: both;">
        <form action="${ctxPath}/doctor/index" method="get" style="margin-top: 30px;">
            <table>
                <tr style="font-size: 16px;">
                    <td>患者:</td>
                    <td><input name="patientName" autocomplete="off" class="layui-input lay-size=sm"></td>
                    <td>&nbsp;&nbsp;预约时间:</td>
                    <td><input name="time" type="date" autocomplete="off" class="layui-input lay-size=sm"></td>
                    <td>
                        <button class="layui-btn layui-btn-normal"style="width: 60px;margin: 0 auto;" type="submit"><i class="layui-icon">&#xe615;</i></button>
                    </td>
                </tr>
            </table>
        </form>
        <table class="layui-table">
            <colgroup>
                <col width="100">
                <col width="200">
                <col width="200">
                <col width="350">
            </colgroup>
            <thead>
            <tr>
                <th>序号</th>
                <th>患者名称</th>
                <th>预约时间</th>
                <th>操作</th>
            </tr>
            </thead>
            <tbody>
                <%for(p in page.list){%>
                    <tr>
                        <td>${pLP.index}</td>
                        <td>${p.patientName}</td>
                        <td>${p.time,'yyyy-MM-dd'}</td>
                        <td colspan="2">
                            <button style="width: 120px;" class="layui-btn layui-btn-normal" onclick="seek(${p.patientId})">就医</button>
                            <button style="width: 120px;" class="layui-btn layui-btn-normal" onclick="check(${p.patientId})">查看病史</button>
                            <button style="width: 120px;" class="layui-btn layui-btn-normal" type="button" onclick="printSeek(${p.patientId})">打印就诊单</button>
                        </td>
                    </tr>
                <%}%>
            </tbody>
        </table>
        <div id="pagination"></div>
    </div>
</div>
<!-- 引入公共头部开始 -->
<% include("common/footer.btl"){} %>
<!-- 引入公共头部结束 -->
<!-- 引入分页脚本 start -->
<% include("../admin/common/page.btl"){} %>
<!-- 引入分页脚本 end -->

<script src="${ctxPath}/js/layui.all.js"></script>
<script type="text/javascript">
    function seek(id) {
        layer.open({
            type: 2,
            title: '就医',
            // closeBtn: 0,
            area: ['800px', '600px'],
            content: ['${ctxPath}/doctor/seek/' + id, 'yes'],
            // btn: ['取消'],
            yes: function (index) {
                //事件
                layer.close(index);
            }
        });
    }

    function check(id) {
        layer.open({
            type: 2,
            title: '查看病史',
            closeBtn: 0,
            area: ['800px', '600px'],
            content: ['${ctxPath}/doctor/medicalHistory/' + id, 'yes'],
            btn: ['取消'],
            yes: function (index) {
                //事件
                layer.close(index);
            }
        });
    }
    function printSeek(id){
        $.ajax({
            url: "${ctxPath}/doctor/printSeek/"+id,
            type: 'post',
            contentType: "application/json;charset=utf-8",
            success: function (data) {
                console.log(data.message);
                layer.alert(data.message);
            },
            error: function (data) {
                layer.msg(data.message, {
                    time: 2000, //2s后自动关闭
                });
            }
        });
        return false
    }
</script>
</body>
</html>